{
  "name": "SiteSquares",
  "version": "0.1",
  "manifest_version": 1,
  "description": "Colors of websites.",
  "background_page": "background.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "SiteSquares"      // optional; shown in tooltip
    //"default_popup": "popup.html"        // optional

  },
  "permissions": [
    "http://*/*",
    "https://*/*",
	"tabs",
	"chrome://favicon/"
  ]
}

